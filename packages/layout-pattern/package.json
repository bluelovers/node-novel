  "main": "lib/index.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "build:pattern:keys": "ts-node ./scripts/build-pattern-keys && tsc ./lib/core/pattern-keys.ts && tsc ./lib/rules-keys.ts",
    "coverage": "npx nyc npm run test",
    "lint": "npx eslint **/*.ts",
    "ncu": "npx yarn-tool ncu -u",
    "npm:publish": "npm publish",
    "prepublishOnly": "npm run ncu && npm run sort-package-json && yarn run build:pattern:keys",
    "postpublish": "echo postpublish",
    "sort-package-json": "npx sort-package-json ./package.json",
    "test": "npx mocha --require ts-node/register !(node_modules)/**/*.{test,spec}.{ts,tsx}",
    "tsc:default": "tsc -p tsconfig.json.tpl",
    "tsc:esm": "tsc -p tsconfig.esm.json"
  },
  "dependencies": {
    "@node-novel/layout": "^2.0.3",
    "debug-color2": "^1.1.6",
    "deepmerge-plus": "^2.1.3",
    "regexp-cjk": "^3.3.6",
    "regexp-helper": "^1.0.8",
    "str-util": "^2.3.21",
    "tieba-harmony": "^1.3.0"
  },
  "devDependencies": {
    "@bluelovers/fast-glob": "^3.0.4",
    "case": "^1.6.1",
