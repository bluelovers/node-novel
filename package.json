{
  "name": "novel",
  "version": "1.0.4",
  "private": true,
  "description": "網路翻譯小說整理工具 do not install this",
  "keywords": [
    "chinese",
    "download",
    "node-novel",
    "novel",
    "sort",
    "txt"
  ],
  "homepage": "https://github.com/bluelovers/node-novel#readme",
  "bugs": {
    "url": "https://github.com/bluelovers/node-novel/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bluelovers/node-novel.git"
  },
  "license": "ISC",
  "author": "",
  "main": "index.js",
  "bin": {
    "novel": "bin/_novel_run_git_diff.js"
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "check-updates": "npx npm-check-updates -u",
    "do-init": "npm run check-updates && npm run do-install",
    "do-install": "npx yarn-tool install",
    "build-novel": "ts-node ./bin/_novel_run_git_diff",
    "create-new-locale": "ts-node ./bin/_create_locale",
    "git-commit-msg-only": "git commit --only --allow-empty",
    "reset-segment-cache": "ts-node ./bin/_reset_segment_cache",
    "run-conv": "ts-node ./bin/_novel_conv",
    "run-conv-fast": "ts-node ./bin/_novel_conv_fast",
    "run-epub": "ts-node ./bin/_run_epub",
    "run-fix-source": "ts-node ./bin/_novel_source",
    "run-segment": "node -r ts-node/register --max-old-space-size=2048 --expose-gc ./bin/_run_segment",
    "run-segment-fast": "node -r ts-node/register --max-old-space-size=2048 --expose-gc ./bin/_run_segment_fast",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@bluelovers/tsconfig": "^1.0.3",
    "@node-novel/md-loader": "^1.0.2",
    "@node-novel/pattern-split": "^1.1.3",
    "@node-novel/txt-split": "^1.1.0",
    "array-hyper-unique": "^1.0.7",
    "bluebird": "^3.5.4",
    "cjk-conv": "^1.1.40",
    "crlf-normalize": "^1.0.3",
    "cross-spawn-extra": "^1.0.5",
    "debug-color2": "^1.0.7",
    "deepmerge-plus": "^2.1.3",
    "diff": "^4.0.1",
    "execall2": "^1.1.1",
    "fast-glob": "^2.2.6",
    "fs-iconv": "^2.0.6",
    "glob-escape": "^0.0.2",
    "i18next": "^15.1.0",
    "iconv-jschardet": "^1.1.0",
    "json5": "latest",
    "node-novel-globby": "^2.0.6",
    "node-novel-info": "^2.3.33",
    "novel-epub": "^1.1.25",
    "novel-segment-cli": "^1.0.19",
    "novel-text": "^1.1.25",
    "novel-txt-merge": "^1.0.20",
    "prettyuse": "^0",
    "regexp-cjk": "^3.0.3",
    "regexp-parser-literal": "^1",
    "str-util": "^2.3.19",
    "tieba-harmony": "^1.3.0",
    "ts-type": "^1.1.3",
    "upath2": "^2.1.3",
    "yargs": "^13"
  },
  "devDependencies": {
    "@types/bluebird": "^3",
    "@types/bluebird-global": "^3",
    "@types/cross-spawn": "^6.0.0",
    "@types/fs-extra": "^5",
    "@types/i18next": "^12"
  },
  "optionalDependencies": {},
  "engines": {
    "node": ">=10"
  }
}
